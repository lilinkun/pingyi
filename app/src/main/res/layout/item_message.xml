<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="message_item"
            type="com.communication.lib_http.httpdata.message.EventMessageBean" />

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp70"
        >
        
        <!--<RelativeLayout
            android:id="@+id/rl_msg_icon"
            android:layout_width="70dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >-->

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardView"
            android:layout_width="@dimen/dp48"
            android:layout_height="@dimen/dp48"
            android:layout_centerVertical="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="@{clickListener}"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="false"
            app:shapeAppearanceOverlay="@style/Py.Card.Apps"
            >

            <ImageView
                android:id="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.google.android.material.card.MaterialCardView>




<!--        </RelativeLayout>-->


        <com.communication.lib_core.TextViewYH
            android:id="@+id/tv_createdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/cardView"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            android:layout_marginStart="@dimen/dp15"
            android:text="@{message_item.createTime}"
            android:textColor="@color/black_msg"
            />



        <com.communication.lib_core.TextViewYH
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_createdate"
            app:layout_constraintStart_toStartOf="@+id/tv_createdate"
            android:layout_marginTop="@dimen/dp10"
            android:text="@{message_item.eventContent}"
            android:textColor="@color/black_msg"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>




</layout>